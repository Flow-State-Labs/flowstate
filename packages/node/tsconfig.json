{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"rootDir": "./src",
		"outDir": "./lib",
		"module": "CommonJS",
		"target": "es5",
		"lib": ["ES2015"],
		"declaration": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*"],
	"exclude": ["./node_modules", "./lib"],
	"references": [
		{
			"path": "../core"
		}
	]
}
