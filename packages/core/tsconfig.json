{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./lib/esm",
		"module": "esnext",
		"target": "es5",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"declaration": true,
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": true
	},
	"include": ["./src/**/*"],
	"exclude": ["./node_modules", "./lib"]
}
